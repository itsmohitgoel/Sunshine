    <string name="empty_forecast_list_server_down">No Weather Information Available. The server is not returning data.</string>
    <string name="empty_forecast_list_server_error">
        No Weather Information Available. The server is not returning valid data. Please check for updated version of Sunshine.
    </string>
    <string name="empty_forecast_list_invalid_location">
        No weather information available. The location in settings is not recognized by the weather server.
        </string>

