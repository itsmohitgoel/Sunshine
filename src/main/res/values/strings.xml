    <string name="action_refresh" translatable="true">Refresh</string>
    <string name="title_activity_detail">DetailActivity</string>
    <string name="title_activity_settings">Settings</string>

    <string name="pref_location_default">560102</string>
    <string name="pref_location_key">location</string>
    <string name="pref_location_label">Location</string>

    <string name="pref_temperature_default">metric</string>
    <string name="pref_temperature_key">units</string>

    <!-- Key name for storing location status in SharedPreferences -->
    <string name="pref_location_status_key" translatable="false">loc-status</string>
    <string name="pref_temperature_label">Temperature</string>
    <string name="pref_temperature_unit_imperial">imperial</string>
